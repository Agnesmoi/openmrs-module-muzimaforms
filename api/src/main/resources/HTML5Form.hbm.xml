<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.openmrs.module.html5forms">
    <class name="HTML5Form" table="html5forms_form">
        <id name="id" type="java.lang.Integer" column="form_id"/>
        <one-to-one cascade="none" name="form" class="org.openmrs.Form" foreign-key="form_id"/>
        <one-to-one cascade="none" name="xform" class="org.openmrs.module.xforms.Xform" foreign-key="form_id"/>
        <set name="tags" table="html5forms_form_tag_mapping">
            <key column="form_id" not-null="true"/>
            <many-to-many column="tag_id" class="HTML5FormTag"/>
        </set>
    </class>
</hibernate-mapping>