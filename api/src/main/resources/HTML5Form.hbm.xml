<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.openmrs.module.html5forms">

    <class name="HTML5Form" table="form">
        <id name="id" type="java.lang.Integer" column="form_id"/>
        <property name="name" type="java.lang.String" not-null="true" length="255"/>
        <property name="description" type="java.lang.String" not-null="true" length="255"/>
        <one-to-one  fetch="select" outer-join="false" name="xform" class="XForm" foreign-key="form_id"/>
    </class>
</hibernate-mapping>