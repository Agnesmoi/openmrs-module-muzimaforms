<?xml version="1.0" encoding="UTF-8"?>

<!-- Beans to add to the current Application context definition -->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.html5forms.api.TagService</value>
                <bean
                        class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
                    <property name="transactionManager">
                        <ref bean="transactionManager"/>
                    </property>
                    <property name="target">
                        <bean class="org.openmrs.module.html5forms.api.impl.TagServiceImpl">
                            <constructor-arg>
                                <bean class="org.openmrs.module.html5forms.api.db.hibernate.impl.TagDAOImpl">
                                    <constructor-arg ref="sessionFactory"/>
                                </bean>
                            </constructor-arg>
                        </bean>
                    </property>
                    <property name="preInterceptors">
                        <ref bean="serviceInterceptors"/>
                    </property>
                    <property name="transactionAttributeSource">
                        <ref bean="transactionAttributeSource"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="html5FormDAO" class="org.openmrs.module.html5forms.api.db.hibernate.impl.HTML5FormDAOImpl">
        <constructor-arg ref="sessionFactory"/>
    </bean>



    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.html5forms.api.HTML5FormService</value>
                <bean
                        class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
                    <property name="transactionManager">
                        <ref bean="transactionManager"/>
                    </property>
                    <property name="target">
                        <bean class="org.openmrs.module.html5forms.api.impl.HTML5FormServiceImpl">
                            <constructor-arg name="dao" ref="html5FormDAO"/>
                            <constructor-arg name="html5Transformer" ref="xform2HtmlTransformer"/>
                        </bean>
                    </property>
                    <property name="preInterceptors">
                        <ref bean="serviceInterceptors"/>
                    </property>
                    <property name="transactionAttributeSource">
                        <ref bean="transactionAttributeSource"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
    <bean id="xform2HtmlTransformer" class="org.openmrs.module.html5forms.xForm2Html5Transform.EnketoXslTransformer">
        <constructor-arg name="transformerFactory" ref="transformerFactory"/>
        <constructor-arg name="transformPipeline" ref="xform2html5XSLPipeline"/>
    </bean>
    <bean id="transformerFactory" class="net.sf.saxon.TransformerFactoryImpl" />
    <bean id="xform2html5XSLPipeline" class="org.openmrs.module.html5forms.xForm2Html5Transform.XslTransformPipeline"
          factory-method="xform2HTML5Pipeline"/>

</beans>
